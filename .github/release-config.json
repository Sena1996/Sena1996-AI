{
  "categories": [
    {
      "title": "## ğŸš€ Features",
      "labels": ["feature", "enhancement"]
    },
    {
      "title": "## ğŸ› Bug Fixes",
      "labels": ["bug", "fix"]
    },
    {
      "title": "## ğŸ”’ Security",
      "labels": ["security"]
    },
    {
      "title": "## ğŸ“š Documentation",
      "labels": ["documentation", "docs"]
    },
    {
      "title": "## ğŸ§ª Tests",
      "labels": ["test", "testing"]
    },
    {
      "title": "## ğŸ”§ Maintenance",
      "labels": ["chore", "maintenance", "refactor"]
    },
    {
      "title": "## ğŸ“¦ Dependencies",
      "labels": ["dependencies"]
    }
  ],
  "ignore_labels": ["skip-changelog"],
  "sort": {
    "order": "ASC",
    "on_property": "mergedAt"
  },
  "template": "#{{CHANGELOG}}\n\n## ğŸ“Š Stats\n- PRs merged: #{{UNCATEGORIZED_COUNT}}\n- Contributors: #{{CONTRIBUTORS}}",
  "pr_template": "- #{{TITLE}} (#{{NUMBER}}) @#{{AUTHOR}}",
  "empty_template": "No changes since last release.",
  "max_pull_requests": 200,
  "max_back_track_time_days": 365,
  "exclude_merge_branches": ["main", "master"],
  "tag_resolver": {
    "method": "semver"
  },
  "transformers": [
    {
      "pattern": "\\[.*?\\]\\s?",
      "target": ""
    }
  ],
  "label_extractor": [
    {
      "pattern": "^(build|chore|ci|docs|feat|fix|perf|refactor|revert|style|test)(\\(.*\\))?!?:",
      "target": "$1",
      "on_property": "title"
    }
  ]
}

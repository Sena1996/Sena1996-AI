#!/usr/bin/env python3
"""SENA Controller - Complete Activation"""
import sys
from pathlib import Path

controller_path = Path.home() / '.claude' / 'sena_controller_v3.0'
if controller_path.exists():
    sys.path.insert(0, str(controller_path))
    from claude_sena_integration import sena
    sena.activate()
else:
    print(f"SENA controller not found: {controller_path}", file=sys.stderr)
    print("Run 'sena setup' to install all components", file=sys.stderr)
    sys.exit(1)

#!/bin/bash
MODE="${1:---interactive}"

PROGRESS_SCRIPT="$HOME/.claude/sena_live_progress.py"

if [[ -f "$PROGRESS_SCRIPT" ]]; then
    python3 "$PROGRESS_SCRIPT" "$MODE"
else
    echo "Progress script not found: $PROGRESS_SCRIPT" >&2
    echo "Run 'sena setup' to install all components" >&2
    exit 1
fi

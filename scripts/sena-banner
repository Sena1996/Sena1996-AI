#!/usr/bin/env python3
"""
SENA Controller Startup Banner
Shows quick status when terminal opens
"""

import sys
from pathlib import Path

# Add SENA to path
sys.path.insert(0, str(Path.home() / '.claude' / 'sena_controller_v3.0'))

def show_banner():
    """Show compact SENA status banner"""

    try:
        from claude_integration import sena
        status = sena.get_status()

        health = status['health']
        features = status['active_features']

        # Use emoji/symbols based on health
        if health == 'FULL_PERFORMANCE':
            icon = '✅'
            color = '\033[92m'  # Green
        elif health in ['OPTIMIZED', 'CORE']:
            icon = '⚠️'
            color = '\033[93m'  # Yellow
        else:
            icon = '❌'
            color = '\033[91m'  # Red

        reset = '\033[0m'

        print(f"{color}┌────────────────────────────────────────────┐{reset}")
        print(f"{color}│  {icon} SENA v3.0: {health:20s} │{reset}")
        print(f"{color}│  Active Features: {features:2d} / 23              │{reset}")
        print(f"{color}└────────────────────────────────────────────┘{reset}")

    except Exception as e:
        # Silent fail - don't show banner if SENA not available
        pass

if __name__ == '__main__':
    show_banner()

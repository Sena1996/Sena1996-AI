#!/bin/bash
INLINE_SCRIPT="$HOME/.claude/sena_inline_progress.py"

echo "╔══════════════════════════════════════════════════════════════════════╗"
echo "║            SENA PROGRESS SYSTEM DEMO                                  ║"
echo "╚══════════════════════════════════════════════════════════════════════╝"
echo ""
echo "1. INLINE PROGRESS (5 seconds):"
echo "   This shows on every conversation automatically!"
echo ""

if [[ -f "$INLINE_SCRIPT" ]]; then
    python3 "$INLINE_SCRIPT" 5
else
    echo "   [Inline progress script not installed]"
    echo "   Run 'sena setup' to install all components"
fi

echo ""
echo "2. FULL TERMINAL PROGRESS:"
echo "   Run 'sena-progress --interactive' in another terminal"
echo ""
echo "3. AUTO-UPDATE STATUS:"
echo "   Inline progress: AUTO-STARTS for every conversation"
echo "   Updates: Every 0.1 seconds automatically"
echo "   Duration: 8 seconds per conversation"
echo ""
echo "The inline progress is now ACTIVE for all your Claude conversations!"

{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "SENA",
  "version": "13.1.5",
  "identifier": "com.sena1996.sena",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "SENA1996 - AI Collaboration Hub",
        "width": 1280,
        "height": 800,
        "minWidth": 900,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "center": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": ["app", "dmg"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/256x256.png",
      "icons/512x512.png",
      "icons/icon.icns",
      "icons/icon.png"
    ],
    "category": "DeveloperTool",
    "shortDescription": "AI Collaboration Hub - Manage your AI tools",
    "longDescription": "SENA is an AI collaboration hub that helps you manage multiple AI providers, chat with AI models, and orchestrate collaborative AI sessions.",
    "copyright": "Â© 2024 Sena1996-AI",
    "macOS": {
      "minimumSystemVersion": "10.15",
      "dmg": {
        "appPosition": { "x": 180, "y": 170 },
        "applicationFolderPosition": { "x": 480, "y": 170 },
        "windowSize": { "width": 660, "height": 400 }
      },
      "entitlements": null,
      "exceptionDomain": null,
      "frameworks": [],
      "providerShortName": null,
      "signingIdentity": null
    },
    "windows": {
      "wix": null
    },
    "linux": {
      "appimage": {
        "bundleMediaFramework": false
      }
    },
    "resources": []
  }
}
